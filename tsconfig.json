{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "types/*"
            ]
        },
        "module": "es6",
        "target": "es5",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "noImplicitAny": true,
        "alwaysStrict": true,
        "moduleResolution": "Node"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}